# Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Application
TZ=UTC
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info
APP_KEY=CHANGE_ME_TO_RANDOM_32_CHARS  # Generate with: node ace generate:key
NODE_ENV=production

# Database (Production MySQL)
DB_HOST=mysql_db
DB_PORT=3306
DB_USER=root
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_DATABASE=spotlight

# OAuth (Google)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_CALLBACK_URL=https://your-domain.com/oauth/google/callback

# Email (Production SMTP - Gmail, SendGrid, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_production_email@gmail.com
SMTP_PASSWORD=your_production_app_password
MAIL_FROM=noreply@your-domain.com

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# Optional
APP_URL=https://your-api-domain.com
DRIVE_DISK=fs
